<header>
	<nav class="navbar navbar-expand-lg navbar-dark bg-dark justify-content-between">
		<div class="container-fluid">
			<a class="navbar-brand" href={{ path('app_home') }}>WF Camp</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarNav"></div>
		</div>
		<div class="container-fluid justify-content-end">
			<ul class="navbar-nav">
				{% if app.user %}
					{% if is_granted('ROLE_ADMIN') %}
						<li class="btn btn-outline-secondary nav-item mx-2">
							<a class="nav-link text-white" href={{ path('app_admin') }}>Panel admin</a>
						</li>
					{% endif %}
					<li class="btn btn-info nav-item mx-2">
						<a class="nav-link text-white" href={{ path('app_post_create') }}>Create a post</a>
					</li>
					<li class="btn btn-secondary nav-item mx-2">
						<a class="nav-link text-white" href={{ path('app_user_profile', {'id':app.user.id} ) }}>Profile</a>
					</li>
					<li class="btn btn-danger nav-item mx-2">
						<a class="nav-link text-white" href={{ path('app_logout') }}>Logout</a>
					</li>
				{% else %}
					<li class="btn btn-outline-primary nav-item mx-2">
						<a class="nav-link text-white" href={{ path('app_register') }}>Sign-up</a>
					</li>
					<li class="btn btn-outline-info nav-item mx-2">
						<a class="nav-link text-white" href={{ path('app_login') }}>Login</a>
					</li>
				{% endif %}
			</ul>
		</div>
	</nav>
</header>


